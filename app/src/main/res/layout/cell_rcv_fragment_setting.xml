<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/list_selector_background">

    <TextView
        android:id="@+id/cell_rcv_fragment_setting_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_small_size"
        app:layout_constraintBottom_toBottomOf="@+id/cell_rcv_fragment_setting_imgview"
        app:layout_constraintStart_toStartOf="@+id/cell_rcv_fragment_setting_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/cell_rcv_fragment_setting_tv_name"
        tools:text="text" />

    <ImageView
        android:id="@+id/cell_rcv_fragment_setting_imgview"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/cell_rcv_fragment_setting_imageview_content_description"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/cell_rcv_fragment_setting_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textSize="@dimen/tv_normal_size"
        app:layout_constraintStart_toEndOf="@+id/cell_rcv_fragment_setting_imgview"
        app:layout_constraintTop_toTopOf="@+id/cell_rcv_fragment_setting_imgview" />
</androidx.constraintlayout.widget.ConstraintLayout>